      {
        title:
          'Graduada en Nutrición Humana y Dietética <br /> <span class="font-normal">Universidad Fernando Pessoa-Canarias (UFP-C)</span>',
        description: ``,
        icon: 'tabler:school',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

