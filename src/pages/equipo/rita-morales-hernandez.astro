  <!-- Steps Widget ****************** -->
  <Steps
    id="education"
    title="Educación"
    items={[
      {
        title:
          'Máster Universitario en Entrenamiento y Nutrición Deportiva <br /> <span class="font-normal">Universidad Europea de Madrid</span>',
        description: ``,
